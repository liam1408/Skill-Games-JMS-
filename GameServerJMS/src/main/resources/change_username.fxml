<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="CENTER" prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, steelblue, darkslateblue);" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="gameServerJMS.ChangeUsernameController">
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT">
         <padding>
            <Insets bottom="30.0" />
         </padding>
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" prefHeight="35.0" prefWidth="150.0" text="Back" textFill="STEELBLUE" style="-fx-background-color: white; -fx-background-radius: 20;">
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="titleLabel" text="Change Username" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="28.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <VBox fx:id="formContainer" alignment="CENTER" maxWidth="400.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15;">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <VBox spacing="8.0">
               <children>
                  <Label text="Current Username">
                     <font>
                        <Font name="Arial" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="currentUsernameField" editable="false" prefHeight="40.0" style="-fx-background-color: lightgray; -fx-background-radius: 8;" />
               </children>
            </VBox>
            <VBox spacing="8.0">
               <children>
                  <Label text="New Username:">
                     <font>
                        <Font name="Arial" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="newUsernameField" prefHeight="40.0" promptText="Enter New Username" style="-fx-background-color: lightgray; -fx-background-radius: 8;" />
               </children>
            </VBox>
            <Label fx:id="errorLabel" maxWidth="350.0" visible="false" wrapText="true" textFill="RED">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <Label fx:id="successLabel" maxWidth="350.0" visible="false" wrapText="true" textFill="GREEN">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" prefHeight="45.0" prefWidth="200.0" text="Save" textFill="WHITE" style="-fx-background-color: green; -fx-background-radius: 25;">
               <effect>
                  <DropShadow />
               </effect>
            </Button>
         </children>
         <effect>
            <DropShadow />
         </effect>
      </VBox>
   </children>
</VBox>