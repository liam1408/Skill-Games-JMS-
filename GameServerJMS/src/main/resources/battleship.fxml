<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="CENTER" prefHeight="1100.0" prefWidth="700.0" spacing="15.0" style="-fx-background-color: darkgray;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="gameServerJMS.BattleshipController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox fx:id="playerDisplay" alignment="CENTER" spacing="20.0" style="-fx-background-color: gray; -fx-border-color: black; -fx-border-width: 2;">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Label fx:id="player1Label" text="Player 1 (You)" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </Label>
            <Label text=" vs ">
               <font>
                  <Font name="Arial" size="20.0" />
               </font>
            </Label>
            <Label fx:id="player2Label" text="Player 2" textFill="LIGHTGRAY">
               <font>
                  <Font name="Arial" size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Label text="Opponent's Fleet">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Label>
      <VBox fx:id="opponentBoardContainer" alignment="CENTER" style="-fx-background-color: gray;">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <GridPane fx:id="opponentGrid" alignment="CENTER" hgap="2.0" vgap="2.0" style="-fx-background-color: black;">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
         </children>
      </VBox>
      <Label fx:id="statusLabel" text="Place your ships (3 remaining)" textFill="DARKBLUE" style="-fx-background-color: lightgray; -fx-border-color: gray; -fx-border-width: 1;">
         <font>
            <Font name="Arial Bold" size="16.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="orientationButton" mnemonicParsing="false" onAction="#handleOrientationChange" text="Place: Horizontal" textFill="WHITE" style="-fx-background-color: blue; -fx-padding: 10 20 10 20;">
               <font>
                  <Font name="Arial Bold" size="14.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="forfeitButton" mnemonicParsing="false" onAction="#handleForfeit" text="Forfeit" textFill="WHITE" style="-fx-background-color: red; -fx-padding: 10 20 10 20;">
               <font>
                  <Font name="Arial Bold" size="14.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </Button>
         </children>
      </HBox>
      <Label text="Your Fleet">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Label>
      <VBox fx:id="myBoardContainer" alignment="CENTER" style="-fx-background-color: gray;">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <GridPane fx:id="myGrid" alignment="CENTER" hgap="2.0" vgap="2.0" style="-fx-background-color: black;">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
         </children>
      </VBox>
   </children>
</VBox>