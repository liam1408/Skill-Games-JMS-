<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      style="-fx-background-color: linear-gradient(to bottom, steelblue, darkslateblue);"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="gameServerJMS.GameSelectionController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT">
         <padding>
            <Insets bottom="20.0" />
         </padding>
         <children>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" prefHeight="35.0" prefWidth="150.0" text="logout" textFill="STEELBLUE"
                    style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-color: steelblue; -fx-border-radius: 20; -fx-border-width: 2;">
               <padding>
                  <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
               </padding>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="userAccountButton" mnemonicParsing="false" onAction="#handleMyAccount" prefHeight="35.0" prefWidth="150.0" text="my account" textFill="STEELBLUE"
                    style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-color: steelblue; -fx-border-radius: 20; -fx-border-width: 2;">
               <padding>
                  <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
               </padding>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
         </children>
      </HBox>
      <VBox fx:id="playerInfoCard" alignment="CENTER" spacing="10.0"
            style="-fx-background-color: white; -fx-background-radius: 15;">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label fx:id="playerNameLabel" text="Welcome Player" textFill="DARKBLUE">
               <font>
                  <Font name="Arial Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="ratingLabel" text="rating: 1000 | wins: 0 | loses: 0 | draws: 0" textFill="GREY">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <GridPane fx:id="gamesGrid" alignment="CENTER" hgap="20.0" vgap="20.0">
         <padding>
            <Insets top="30.0" />
         </padding>
         <children>
            <Button fx:id="connectFourButton" mnemonicParsing="false" onAction="#handleConnectFour" prefHeight="120.0" prefWidth="200.0" text="ConnectFour" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="0"
                    style="-fx-background-color: green; -fx-background-radius: 10;">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Button fx:id="battleShipsButton" mnemonicParsing="false" onAction="#handleBattleShips" prefHeight="120.0" prefWidth="200.0" text="BattleShips" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="0"
                    style="-fx-background-color: green; -fx-background-radius: 10;">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Button fx:id="justNotOneButton" mnemonicParsing="false" onAction="#handleJustNotOne" prefHeight="120.0" prefWidth="200.0" text="Just Not One" textFill="WHITE" GridPane.columnIndex="2" GridPane.rowIndex="0"
                    style="-fx-background-color: green; -fx-background-radius: 10;">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
         </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
      </GridPane>
      <VBox fx:id="statusBox" alignment="CENTER" spacing="15.0">
         <padding>
            <Insets top="30.0" />
         </padding>
         <children>
            <Label fx:id="statusLabel" text="Looking for another player..." textFill="ORANGE" visible="false"
                   style="-fx-background-color: white; -fx-background-radius: 10;">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelQueue" prefHeight="45.0" prefWidth="200.0" text="Cancel Queue" textFill="WHITE" visible="false"
                    style="-fx-background-color: red; -fx-background-radius: 25;">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="15.0">
         <padding>
            <Insets top="20.0" />
         </padding>
         <children>
            <Button fx:id="leaderboardButton" mnemonicParsing="false" onAction="#handleLeaderboard" prefHeight="35.0" prefWidth="150.0" text="leaderboard" textFill="STEELBLUE"
                    style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-color: steelblue; -fx-border-radius: 20; -fx-border-width: 2;" />
         </children>
      </VBox>
   </children>
</VBox>