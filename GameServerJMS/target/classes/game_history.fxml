<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, steelblue, darkslateblue);" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gameServerJMS.GameHistoryController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT">
         <padding>
            <Insets bottom="20.0" />
         </padding>
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" prefHeight="35.0" prefWidth="150.0" text="Back" textFill="STEELBLUE" style="-fx-background-color: white; -fx-background-radius: 20;">
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="titleLabel" text="Match History" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="28.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <VBox fx:id="contentArea" alignment="CENTER" prefHeight="400.0" prefWidth="700.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 15;">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <Label text="Match History" wrapText="true">
               <font>
                  <Font name="Arial" size="16.0" />
               </font>
            </Label>
            <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="300.0" style="-fx-background-color: transparent;">
               <content>
                  <VBox fx:id="historyList" alignment="CENTER" spacing="10.0" />
               </content>
            </ScrollPane>
         </children>
         <effect>
            <DropShadow />
         </effect>
      </VBox>
   </children>
</VBox>